<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.collegeeats.Delivery.DeliveryFragment"
        android:label="Delivery"
        tools:layout="@layout/fragment_delivery">
        <action
            android:id="@+id/action_home_to_history"
            app:destination="@id/history" />
        <action
            android:id="@+id/action_home_to_pending"
            app:destination="@id/pending" />
    </fragment>


    <fragment
        android:id="@+id/history"
        android:name="com.example.collegeeats.Delivery.DeliveryFragment"
        android:label="History"
        tools:layout="@layout/fragment_delivery"/>

    <fragment
        android:id="@+id/pending"
        android:name="com.example.collegeeats.Delivery.DeliveryFragment"
        android:label="Delivery"
        tools:layout="@layout/fragment_delivery"/>


</navigation>